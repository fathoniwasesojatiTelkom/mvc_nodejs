<%- include('./header.ejs') %>
	<div class="section full-height">
		<div class="absolute-center">
			<div class="container">
				<div class="row justify-content-center">
					<div class="col-6">
                        <form method="POST" action="/edit">
                            <input type="hidden" name="_id" value="<%= data._id %>">
							<div class="form-group">
								<label for="name">Name</label>
								<input name="name" type="text" class="form-control" id="name" aria-describedby="name" placeholder="Enter name" value="<%= data.name %> ">
							</div>
							<div class="form-group">
								<label for="email">Email</label>
								<input name="email" type="email" class="form-control" id="email" placeholder="email"  value="<%= data.email %> ">
							</div>
							<div class="form-group">
								<label for="nip">NIP</label>
								<input name="nip" type="text" class="form-control" id="nip" aria-describedby="nip" placeholder="Enter nip"  value="<%= data.nip %> ">
							</div>
							<div class="form-group">
								<label for="alamat">Alamat</label>
								<input name="alamat" type="text" class="form-control" id="alamat" aria-describedby="address" placeholder="Enter address"  value="<%= data.alamat %> ">
							</div>
							<div class="form-group">
								<label for="provinsi">Provinsi</label>
								<input name="provinsi" type="text" class="form-control" id="provinsi" aria-describedby="provinsi" placeholder="Enter Provinsi"  value="<%= data.provinsi %> ">
							</div>
							<div class="form-group">
								<label for="berat">Berat</label>
								<input name="berat" type="text" class="form-control" id="berat" aria-describedby="berat" placeholder="Enter Berat"  value="<%= data.berat %> ">
							</div>
							<div class="form-group">
								<label for="tinggi">Tinggi</label>
								<input name="tinggi" type="text" class="form-control" id="tinggi" aria-describedby="tinggi" placeholder="Enter tinggi"  value="<%= data.tinggi %> ">
							</div>
							<button class="btn btn-primary text-lg-center">Submit</button>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
	</div>
<%- include('./footer.ejs') %>